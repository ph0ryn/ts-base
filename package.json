{
  "name": "ts-base",
  "private": true,
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "format": "pnpm run lint --fix . ; oxfmt . ; eslint --fix .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "git config core.hooksPath .githooks",
    "lint": "oxlint --type-aware",
    "precommit": "pnpm run typecheck && pnpm run format",
    "typecheck": "tsgo -p . --noEmit"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "pnpm run precommit"
    ],
    "*.js": [
      "pnpm run format"
    ],
    "*.mjs": [
      "pnpm run format"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "catalog:lint",
    "@typescript/native-preview": "catalog:types",
    "eslint": "catalog:lint",
    "eslint-plugin-import-x": "catalog:lint",
    "eslint-plugin-oxlint": "catalog:lint",
    "lint-staged": "catalog:dev",
    "oxfmt": "catalog:lint",
    "oxlint": "catalog:lint",
    "oxlint-tsgolint": "catalog:lint",
    "sort-package-json": "catalog:dev",
    "typescript-eslint": "catalog:lint"
  },
  "peerDependencies": {
    "typescript": "catalog:release"
  },
  "packageManager": "pnpm@10.28.0"
}